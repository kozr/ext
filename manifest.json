{
  "name": "Dark Themed Messenger",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Yay dark themed everything!",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery/jquery.min.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  
  "browser_action": {
    "default_popup": "src/page_action/popup.html",
    "default_title": "page",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "contentSettings",
    "declarativeContent",
    "storage",
    "https://www.messenger.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.messenger.com/*"
      ],
      "js":[
        "js/jquery/jquery.js"
      ],
      "css": [
        "src/inject/inject.css"
      ]      
    }
  ]
}